@model SaferMS.Models.DB.Area

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Área</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdArea" />
            <div class="form-group">
                <label asp-for="NomArea" class="control-label">Nombre de Área</label>
                <input asp-for="NomArea" class="form-control" />
                <span asp-validation-for="NomArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regrear al registro de áreas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

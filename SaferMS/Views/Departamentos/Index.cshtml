@model IEnumerable<SaferMS.Models.DB.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Departamentos</h1>

<p>
    <a asp-action="Create">Crear nuevo departamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomDepartamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomDepartamento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDepartamento">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdDepartamento">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDepartamento">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

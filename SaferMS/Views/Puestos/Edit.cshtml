@model SaferMS.Models.DB.Puesto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Puesto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPuesto" />
            <div class="form-group">
                <label asp-for="NomPuesto" class="control-label">Puesto</label>
                <input asp-for="NomPuesto" class="form-control" />
                <span asp-validation-for="NomPuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a registro de puestos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
